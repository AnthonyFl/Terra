{% extends 'layout.html.twig' %}

{% block title %} {% endblock %}

{% block content %}
<div class="col-md-6 col-md-offset-3">
	<div class="panel-default border">
		<div class="panel-heading text-center"><h2>{{ poi.titre }}</h2></div>
		<div class="panel-body">
			<img src="<?= $url ?>photo/<?= $poi -> getPhoto() ?>" alt="" class="img-responsive"><hr>
			<p class="text-center">Lieu : {{ poi.lieu }}</p>
			<p class="text-center">Description : {{ poi.description }}</p>
			<p class="text-center">Catégorie : {{ poi.categorie }}</p>
			<p class="text-center">Adresse : {{ poi.adresse }}></p>
			<p class="text-center">Ville : {{ poi.ville }}</p>
			<p class="text-center">Région : {{ poi.region }}</p>
			<p class="text-center">Pays : {{ poi.pays }}</p><hr>
		</div>
	</div>
</div>

{% endblock %}








